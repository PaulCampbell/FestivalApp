<h1>Listing stages</h1>

<table>
  <tr>
    <th>Festival</th>
    <th>Name</th>
    <th>Description</th>
    <th>Image</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stages.each do |stage| %>
  <tr>
    <td><%= stage.festival_id %></td>
    <td><%= stage.name %></td>
    <td><%= stage.description %></td>
    <td><%= stage.image %></td>
    <td><%= stage.longitude %></td>
    <td><%= stage.latitude %></td>
    <td><%= link_to 'Show', stage %></td>
    <td><%= link_to 'Edit', edit_stage_path(stage) %></td>
    <td><%= link_to 'Destroy', stage, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

