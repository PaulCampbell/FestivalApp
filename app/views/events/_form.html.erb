  <% end %>

  <div class="field">
     <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div>
  <div>
    <%= f.label :days, :content =>"Day" %>
    <!-- Todo:Sort this out... -->
	<select name="event[description]" id="event_description">
	<% @days.each do |d| %>
      <option value="1"><%= d %></option>
	<% end %>
