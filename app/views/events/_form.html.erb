  </div>
  <div class="field">
    <%= f.label :starttime %>
    <%= f.datetime_select :starttime %>
  </div>
  <div class="field">
    <%= f.label :endtime %>
    <%= f.datetime_select :endtime %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
	<%= f.hidden_field  :stage_id %>
    <%= f.submit %>
  </div>
